<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <ul class="nav">
        <li>
            <a href="@Url.Action("Index", "Zoo")"> Attractions </a>
        </li>

        <li>
            <a href="@Url.Action("VisitorDetails", "Zoo")"> Visitor info </a>
        </li>

        <li>
            <a href="@Url.Action("BuyTickets", "Zoo")"> Tickets </a>
        </li>

    </ul>

    <div class="header-container">
        <h1 class="content">
            Welcome to Zoo Center
        </h1>
    </div>

    <div class="slider-buttons">
        <img src="~/images/prevArrow.png" class="prev" onclick="prevImage()" />
        <img class="next" src="~/images/nextArrow.png" onclick="nextImage()" />
    </div>

</body>
</html>
